<ui:FluentWindow
    ExtendsContentIntoTitleBar="True"
    FontFamily="{DynamicResource Inter}"
    Height="604"
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    Title="TRE-PB - Criador de Crachás"
    UseLayoutRounding="True"
    Width="896"
    WindowBackdropType="Mica"
    WindowCornerPreference="Default"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d"
    x:Class="TRE.PB.Cracha.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="clr-namespace:TRE.PB.Cracha.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:TRE.PB.Cracha.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <system:String x:Key="OpenPhotoTooltip">Formatos suportados: JPG, JPEG, PNG, BMP e PDF. Caso a imagem seja um PDF, a primeira página será utilizada. O processo de carregamento pode demorar alguns segundos.</system:String>
            <ImageSource x:Key="BaseFrontImage">pack://application:,,,/TRE-PB - Criador de Crachás;component/Assets/Images/base-front.png</ImageSource>

            <converters:BadgeValueConverter x:Key="MultiValueConverter" />

            <converters:BooleanToVisibilityConverter
                FalseValue="Visible"
                TrueValue="Hidden"
                x:Key="OpenPhotoButtonVisibilityConverter" />

            <converters:BooleanToVisibilityConverter
                FalseValue="Visible"
                TrueValue="Hidden"
                x:Key="BadgeListTextVisibilityConverter" />
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentPresenter
            Grid.Row="0"
            Grid.RowSpan="2"
            Panel.ZIndex="1"
            x:Name="DialogContentPresenter" />

        <ui:TitleBar
            Grid.Row="0"
            ShowMaximize="False"
            Title="TRE-PB - Criador de Crachás">
            <ui:TitleBar.CanMaximize>False</ui:TitleBar.CanMaximize>
        </ui:TitleBar>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" x:Name="FullBadgeGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--  Badge Front  -->
                    <Canvas Grid.Column="0">
                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleX="0.1889" ScaleY="0.1889" />
                        </Canvas.LayoutTransform>
                        <Grid
                            Background="#FFFFFF"
                            Height="2518"
                            Width="1600"
                            x:Name="BadgeFront">
                            <Image
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="{StaticResource BaseFrontImage}"
                                Stretch="Fill" />

                            <Canvas Background="Transparent">
                                <!--  Open Photo Button  -->
                                <ui:Button
                                    Appearance="Light"
                                    Canvas.Left="638"
                                    Canvas.Top="812"
                                    Command="{Binding OpenPhotoCommand}"
                                    CornerRadius="100"
                                    Cursor="Hand"
                                    Height="944"
                                    ToolTip="{StaticResource OpenPhotoTooltip}"
                                    Visibility="{Binding IsPhotoOpen, Converter={StaticResource OpenPhotoButtonVisibilityConverter}}"
                                    Width="752">

                                    <StackPanel>
                                        <ui:SymbolIcon FontSize="120" Symbol="ImageAdd20" />
                                        <TextBlock
                                            FontSize="76"
                                            FontWeight="SemiBold"
                                            Margin="0,8,0,0"
                                            Text="ADICIONAR FOTO 3x4"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </ui:Button>

                                <!--  Photo  -->
                                <WrapPanel
                                    Canvas.Left="638"
                                    Canvas.Top="812"
                                    Height="944"
                                    Width="752"
                                    x:Name="PhotoContainer">
                                    <Image
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Source="{Binding Photo}"
                                        Stretch="Uniform"
                                        ToolTip="Clique com o botão direito para alterar ou remover a foto">

                                        <Image.ContextMenu>
                                            <ContextMenu>
                                                <ui:MenuItem Command="{Binding OpenPhotoCommand}" Header="Alterar">
                                                    <ui:MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="ImageAdd20" />
                                                    </ui:MenuItem.Icon>
                                                </ui:MenuItem>
                                                <ui:MenuItem Command="{Binding RemovePhotoCommand}" Header="Remover">
                                                    <ui:MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Delete20" />
                                                    </ui:MenuItem.Icon>
                                                </ui:MenuItem>
                                            </ContextMenu>
                                        </Image.ContextMenu>

                                    </Image>

                                    <WrapPanel.OpacityMask>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Border
                                                    Background="#FFFFFF"
                                                    CornerRadius="40"
                                                    Height="{Binding ElementName=PhotoContainer, Path=ActualHeight}"
                                                    Width="{Binding ElementName=PhotoContainer, Path=ActualWidth}" />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </WrapPanel.OpacityMask>
                                </WrapPanel>

                                <!--  Name and Position  -->
                                <Grid
                                    Canvas.Top="1880"
                                    Height="475"
                                    VerticalAlignment="Center"
                                    Width="1600">

                                    <StackPanel VerticalAlignment="Center">
                                        <ui:TextBox
                                            FontSize="130"
                                            FontWeight="Bold"
                                            Margin="64,0"
                                            MaxLength="35"
                                            PlaceholderText="NOME SOBRENOME"
                                            Style="{DynamicResource AppTextBox}"
                                            Text="{Binding FirstLastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center" />

                                        <ui:TextBox
                                            FontSize="110"
                                            FontWeight="Bold"
                                            Margin="64,32,64,0"
                                            MaxLength="35"
                                            PlaceholderText="CARGO"
                                            Style="{DynamicResource AppTextBox}"
                                            Text="{Binding Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Canvas>
                        </Grid>
                    </Canvas>

                    <!--  Badge Back  -->
                    <Canvas Grid.Column="2">
                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleX="0.1889" ScaleY="0.1889" />
                        </Canvas.LayoutTransform>
                        <Grid
                            Background="#FFFFFF"
                            Height="2518"
                            Width="1600"
                            x:Name="BadgeBack">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="400" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Border
                                    BorderBrush="#000000"
                                    BorderThickness="10"
                                    CornerRadius="40"
                                    Margin="130,230,130,0">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <!--  Full Name  -->
                                            <RowDefinition Height="220" />

                                            <!--  Position  -->
                                            <RowDefinition Height="220" />

                                            <!--  Birthdate, Blood Type  -->
                                            <RowDefinition Height="220" />

                                            <!--  Identity, Identity Date  -->
                                            <RowDefinition Height="220" />

                                            <!--  CPF  -->
                                            <RowDefinition Height="210" />

                                            <!--  Voter ID  -->
                                            <RowDefinition Height="210" />

                                            <!--  Voter Zone, Voter Section  -->
                                            <RowDefinition Height="210" />

                                            <!--  Title, Address  -->
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            CornerRadius="40,40,0,0"
                                            Grid.Row="0">
                                            <Grid>
                                                <TextBlock
                                                    FontSize="55"
                                                    FontWeight="Bold"
                                                    Foreground="#000000"
                                                    Grid.Row="0"
                                                    IsHitTestVisible="False"
                                                    Margin="24,12,0,0"
                                                    Text="NOME:" />

                                                <ui:TextBox
                                                    FontSize="75"
                                                    FontWeight="SemiBold"
                                                    Margin="32,16,32,32"
                                                    MaxLength="50"
                                                    PlaceholderText="NOME COMPLETO"
                                                    Style="{DynamicResource AppTextBox}"
                                                    Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    TextAlignment="Center"
                                                    VerticalAlignment="Bottom" />
                                            </Grid>
                                        </Border>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            Grid.Row="1">
                                            <Grid>
                                                <TextBlock
                                                    FontSize="55"
                                                    FontWeight="Bold"
                                                    Foreground="#000000"
                                                    Grid.Row="0"
                                                    IsHitTestVisible="False"
                                                    Margin="24,12,0,0"
                                                    Text="CARGO:" />

                                                <ui:TextBox
                                                    FontSize="75"
                                                    FontWeight="SemiBold"
                                                    Margin="32,16,32,32"
                                                    MaxLength="35"
                                                    PlaceholderText="CARGO"
                                                    Style="{DynamicResource AppTextBox}"
                                                    Text="{Binding Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    TextAlignment="Center"
                                                    VerticalAlignment="Bottom" />
                                            </Grid>
                                        </Border>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            Grid.Row="2">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="850" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Border
                                                    BorderBrush="#000000"
                                                    BorderThickness="0,0,10,0"
                                                    Grid.Column="0">

                                                    <Grid>
                                                        <TextBlock
                                                            FontSize="55"
                                                            FontWeight="Bold"
                                                            Foreground="#000000"
                                                            Grid.Row="0"
                                                            IsHitTestVisible="False"
                                                            Margin="24,12,0,0"
                                                            Text="NASCIMENTO:" />

                                                        <ui:TextBox
                                                            FontSize="75"
                                                            FontWeight="SemiBold"
                                                            Margin="16,16,16,32"
                                                            MaxLength="10"
                                                            PlaceholderText="01/01/1900"
                                                            Style="{DynamicResource AppTextBox}"
                                                            Text="{Binding Birthdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            TextAlignment="Center"
                                                            VerticalAlignment="Bottom" />
                                                    </Grid>
                                                </Border>

                                                <Grid Grid.Column="1">
                                                    <TextBlock
                                                        FontSize="55"
                                                        FontWeight="Bold"
                                                        Foreground="#000000"
                                                        Grid.Row="0"
                                                        IsHitTestVisible="False"
                                                        Margin="24,12,0,0"
                                                        Text="GS/RH:" />

                                                    <ui:TextBox
                                                        FontSize="75"
                                                        FontWeight="SemiBold"
                                                        Margin="0,16,0,32"
                                                        MaxLength="3"
                                                        PlaceholderText="AB+"
                                                        Style="{DynamicResource AppTextBox}"
                                                        Text="{Binding BloodType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        TextAlignment="Center"
                                                        VerticalAlignment="Bottom" />
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            Grid.Row="3">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="800" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Border
                                                    BorderBrush="#000000"
                                                    BorderThickness="0,0,10,0"
                                                    Grid.Column="0">

                                                    <Grid>
                                                        <TextBlock
                                                            FontSize="55"
                                                            FontWeight="Bold"
                                                            Foreground="#000000"
                                                            Grid.Row="0"
                                                            IsHitTestVisible="False"
                                                            Margin="24,12,0,0"
                                                            Text="IDENTIDADE:" />

                                                        <ui:TextBox
                                                            FontSize="75"
                                                            FontWeight="SemiBold"
                                                            Margin="16,16,16,32"
                                                            MaxLength="20"
                                                            PlaceholderText="00.000.000/AAAAA"
                                                            Style="{DynamicResource AppTextBox}"
                                                            Text="{Binding Identity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            TextAlignment="Center"
                                                            VerticalAlignment="Bottom" />
                                                    </Grid>
                                                </Border>

                                                <Grid Grid.Column="1">
                                                    <TextBlock
                                                        FontSize="55"
                                                        FontWeight="Bold"
                                                        Foreground="#000000"
                                                        Grid.Row="0"
                                                        IsHitTestVisible="False"
                                                        Margin="24,12,0,0"
                                                        Text="EXPEDIÇÃO:" />

                                                    <ui:TextBox
                                                        FontSize="75"
                                                        FontWeight="SemiBold"
                                                        Margin="0,16,0,32"
                                                        MaxLength="10"
                                                        PlaceholderText="01/01/1900"
                                                        Style="{DynamicResource AppTextBox}"
                                                        Text="{Binding IdentityDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        TextAlignment="Center"
                                                        VerticalAlignment="Bottom" />
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            Grid.Row="4">
                                            <Grid>
                                                <TextBlock
                                                    FontSize="55"
                                                    FontWeight="Bold"
                                                    Foreground="#000000"
                                                    Grid.Row="0"
                                                    IsHitTestVisible="False"
                                                    Margin="24,12,0,0"
                                                    Text="CPF:" />

                                                <ui:TextBox
                                                    FontSize="75"
                                                    FontWeight="SemiBold"
                                                    Margin="32,16,32,32"
                                                    MaxLength="20"
                                                    PlaceholderText="000.000.000-00"
                                                    Style="{DynamicResource AppTextBox}"
                                                    Text="{Binding Cpf, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    TextAlignment="Center"
                                                    VerticalAlignment="Bottom" />
                                            </Grid>
                                        </Border>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            Grid.Row="5">
                                            <Grid>
                                                <TextBlock
                                                    FontSize="55"
                                                    FontWeight="Bold"
                                                    Foreground="#000000"
                                                    Grid.Row="0"
                                                    IsHitTestVisible="False"
                                                    Margin="24,12,0,0"
                                                    Text="TÍTULO DE ELEITOR:" />

                                                <ui:TextBox
                                                    FontSize="75"
                                                    FontWeight="SemiBold"
                                                    Margin="64,16,64,32"
                                                    MaxLength="20"
                                                    PlaceholderText="0000000000000"
                                                    Style="{DynamicResource AppTextBox}"
                                                    Text="{Binding VoterId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    TextAlignment="Right"
                                                    VerticalAlignment="Bottom" />
                                            </Grid>
                                        </Border>

                                        <Border
                                            BorderBrush="#000000"
                                            BorderThickness="0,0,0,10"
                                            Grid.Row="6">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Border
                                                    BorderBrush="#000000"
                                                    BorderThickness="0,0,10,0"
                                                    Grid.Column="0">

                                                    <Grid>
                                                        <TextBlock
                                                            FontSize="55"
                                                            FontWeight="Bold"
                                                            Foreground="#000000"
                                                            Grid.Row="0"
                                                            IsHitTestVisible="False"
                                                            Margin="24,12,0,0"
                                                            Text="ZONA:" />

                                                        <ui:TextBox
                                                            FontSize="75"
                                                            FontWeight="SemiBold"
                                                            Margin="16,16,16,32"
                                                            MaxLength="5"
                                                            PlaceholderText="00000"
                                                            Style="{DynamicResource AppTextBox}"
                                                            Text="{Binding VoterZone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            TextAlignment="Center"
                                                            VerticalAlignment="Bottom" />
                                                    </Grid>
                                                </Border>

                                                <Grid Grid.Column="1">
                                                    <TextBlock
                                                        FontSize="55"
                                                        FontWeight="Bold"
                                                        Foreground="#000000"
                                                        Grid.Row="0"
                                                        IsHitTestVisible="False"
                                                        Margin="24,12,0,0"
                                                        Text="SEÇÃO:" />

                                                    <ui:TextBox
                                                        FontSize="75"
                                                        FontWeight="SemiBold"
                                                        Margin="0,16,0,32"
                                                        MaxLength="5"
                                                        PlaceholderText="00000"
                                                        Style="{DynamicResource AppTextBox}"
                                                        Text="{Binding VoterSection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        TextAlignment="Center"
                                                        VerticalAlignment="Bottom" />
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <Grid Grid.Row="7">
                                            <TextBlock
                                                Foreground="Black"
                                                LineStackingStrategy="BlockLineHeight"
                                                Margin="64,0"
                                                TextAlignment="Center"
                                                TextWrapping="Wrap"
                                                VerticalAlignment="Center">
                                                <Run
                                                    FontSize="70"
                                                    FontWeight="SemiBold"
                                                    Text="TRIBUNAL REGIONAL ELEITORAL DA PARAÍBA" />
                                                <LineBreak />
                                                <Run
                                                    FontSize="58"
                                                    FontWeight="Medium"
                                                    Text="Av. Princesa Isabel, 201 - Tambiá, João Pessoa - PB - 58020-528 (83) 3512-1200" />
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!--  Enrollment Bar Code  -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                <ui:TextBox
                                    FontSize="75"
                                    FontWeight="SemiBold"
                                    Margin="0,32,0,0"
                                    MaxLength="20"
                                    PlaceholderText="MATRÍCULA"
                                    Style="{DynamicResource AppTextBox}"
                                    Text="{Binding Enrollment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center" />

                                <Image
                                    Height="250"
                                    Margin="0,0,0,64"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{Binding EnrollmentBarcode, Mode=OneWay}"
                                    Stretch="Fill"
                                    Width="750" />
                            </StackPanel>
                        </Grid>
                    </Canvas>
                </Grid>

                <ui:Card
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Margin="40,0,0,0"
                    VerticalAlignment="Stretch">
                    <Grid Height="440">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            FontSize="13"
                            LineHeight="5"
                            Margin="0,16"
                            Panel.ZIndex="999"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            VerticalAlignment="Top"
                            Visibility="{Binding HasBadges, Converter={StaticResource BadgeListTextVisibilityConverter}}">
                            <Run>Os crachás salvos serão listados aqui</Run>
                        </TextBlock>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding Badges}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ui:Card Margin="0,0,0,8" Padding="4">
                                                <StackPanel>
                                                    <ui:Image
                                                        CornerRadius="4"
                                                        Height="100"
                                                        Margin="0,0,0,4"
                                                        RenderOptions.BitmapScalingMode="HighQuality"
                                                        Source="{Binding CoverImage}"
                                                        Stretch="Uniform" />

                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <ui:Button
                                                            Appearance="Transparent"
                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.EditBadgeCommand}"
                                                            CommandParameter="{Binding Id}"
                                                            ToolTip="Editar crachá">
                                                            <ui:Button.Icon>
                                                                <ui:SymbolIcon Symbol="Edit20" />
                                                            </ui:Button.Icon>
                                                        </ui:Button>
                                                        <ui:Button
                                                            Appearance="Transparent"
                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.RemoveBadgeCommand}"
                                                            CommandParameter="{Binding Id}"
                                                            Margin="8,0,0,0"
                                                            ToolTip="Remover crachá">
                                                            <ui:Button.Icon>
                                                                <ui:SymbolIcon Symbol="Delete20" />
                                                            </ui:Button.Icon>
                                                        </ui:Button>
                                                    </StackPanel>
                                                </StackPanel>
                                            </ui:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>

                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom">
                            <ui:Button
                                Appearance="Danger"
                                Command="{Binding RemoveAllBadgesCommand}"
                                Content="Remover todos">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="Delete20" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>
                    </Grid>
                </ui:Card>
            </Grid>

            <ui:Card Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <ui:Button Command="{Binding SaveCommand}" Content="Salvar">
                            <ui:Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                    <Binding ElementName="FullBadgeGrid" />
                                    <Binding ElementName="BadgeFront" />
                                    <Binding ElementName="BadgeBack" />
                                </MultiBinding>
                            </ui:Button.CommandParameter>
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Save20" />
                            </ui:Button.Icon>
                        </ui:Button>
                        <ui:Button
                            Command="{Binding ClearCommand}"
                            Content="Limpar"
                            Margin="16,0,0,0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="TextClearFormatting20" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <ui:Button
                            Appearance="Transparent"
                            Command="{Binding AboutCommand}"
                            Content="Sobre">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Info20" />
                            </ui:Button.Icon>
                        </ui:Button>
                        <ui:Button
                            Appearance="Success"
                            Command="{Binding ExportAllBadgesCommand}"
                            Content="Exportar"
                            Margin="16,0,0,0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="DocumentPdf20" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>
                </Grid>
            </ui:Card>
        </Grid>

        <ui:SnackbarPresenter
            Grid.Row="0"
            Grid.RowSpan="2"
            x:Name="SnackbarPresenter" />
    </Grid>
</ui:FluentWindow>